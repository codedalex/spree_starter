<% content_for :title, "#{current_store.name} - Premium Golf Tours" %>
<% content_for :meta_description, "Experience luxury golf tours with Golf n Vibes. Championship courses, vibrant experiences, and unforgettable adventures worldwide." %>

<!-- Golf n Vibes Hero Section -->
<%= render 'themes/golf_n_vibes/page_sections/hero' %>

<!-- Featured Products Section -->
<section class="py-16 bg-gray-50 dark:bg-slate-800">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl font-bold text-primary dark:text-white mb-4">Golf Tour Packages</h2>
      <p class="text-lg text-secondary dark:text-gray-300 max-w-3xl mx-auto">
        Discover our carefully curated golf experiences that combine world-class courses with luxury accommodations and cultural immersion.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% products = Spree::Product.available.limit(6) %>
      <% if products.any? %>
        <% products.each do |product| %>
          <div class="bg-white dark:bg-slate-700 rounded-xl shadow-lg overflow-hidden transform transition hover:-translate-y-2 hover:shadow-xl">
            <div class="relative h-48">
            <% if product.images.any? %>
              <% begin %>
                <%= image_tag product.images.first.attachment, 
                              alt: product.name,
                              class: "w-full h-full object-cover" %>
              <% rescue %>
                <div class="w-full h-full bg-gradient-to-br from-accent/20 to-primary/20 flex items-center justify-center">
                  <svg class="w-16 h-16 text-accent/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              <% else %>
                <div class="w-full h-full bg-gradient-to-br from-accent/20 to-primary/20 flex items-center justify-center">
                  <svg class="w-16 h-16 text-accent/40" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              
              <!-- Price badge -->
              <div class="absolute top-4 right-4 bg-accent text-white px-3 py-1 rounded-full text-sm font-semibold">
                <%= product.price %>
              </div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-bold text-primary dark:text-white mb-2">
                <%= link_to product.name, product_path(product), class: "hover:text-accent transition" %>
              </h3>
              
              <p class="text-secondary dark:text-gray-300 text-sm mb-4 line-clamp-3">
                <%= truncate(strip_tags(product.description), length: 120) %>
              </p>
              
              <div class="flex items-center justify-between">
                <div class="flex items-center space-x-2">
                  <% if product.total_on_hand > 0 %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                      Available
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">
                      <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                      </svg>
                      Sold Out
                    </span>
                  <% end %>
                </div>
                
                <%= link_to product_path(product), 
                            class: "inline-flex items-center px-4 py-2 bg-accent text-white text-sm font-medium rounded-lg hover:bg-secondary transition group" do %>
                  View Details
                  <svg class="ml-2 w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
                  </svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <!-- No products placeholder -->
        <div class="col-span-full text-center py-12">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900 dark:text-gray-100">No golf tours yet</h3>
          <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Get started by adding some premium golf tour packages.</p>
        </div>
      <% end %>
    </div>
    
    <% if products.any? %>
      <div class="text-center mt-12">
        <%= link_to products_path, 
                    class: "inline-flex items-center px-8 py-3 border-2 border-accent text-accent font-medium rounded-full hover:bg-accent hover:text-white transition" do %>
          View All Tours
          <svg class="ml-2 w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
          </svg>
        <% end %>
      </div>
    <% end %>
  </div>
</section>

<!-- Call to Action Section -->
<section class="py-16 bg-primary text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-3xl font-bold mb-4">Ready for Your Next Golf Adventure?</h2>
    <p class="text-lg mb-8 opacity-90">
      Join thousands of golf enthusiasts who have experienced unforgettable moments with Golf n Vibes.
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      <%= link_to products_path, 
                  class: "inline-flex items-center px-8 py-3 bg-white text-primary font-medium rounded-full hover:bg-gray-100 transition group" do %>
        Book Your Tour
        <svg class="ml-2 w-5 h-5 transform group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
        </svg>
      <% end %>
      
      <%= link_to "/contact", 
                  class: "inline-flex items-center px-8 py-3 border-2 border-white text-white font-medium rounded-full hover:bg-white hover:text-primary transition" do %>
        Contact Us
      <% end %>
    </div>
  </div>
</section>
