# Production Environment Variables Template for Golf N Vibes Spree Store

# Rails Configuration
RAILS_ENV=production
RACK_ENV=production

# Secret Key Base (Generate using: rails secret)
SECRET_KEY_BASE=your_secret_key_base_here

# Database Configuration
# For Azure PostgreSQL Flexible Server (when available)
# DATABASE_URL=postgresql://username:password@hostname:5432/database_name?sslmode=require

# For SQLite fallback (zero-cost deployment)
# DATABASE_URL will fallback to SQLite if not provided
# DATABASE_URL=

# Redis Configuration (optional - for caching and sessions)
# REDIS_URL=redis://hostname:port/database_number

# Application Host Configuration
ALLOWED_HOSTS=your-app-name.azurewebsites.net,your-custom-domain.com

# Spree Configuration
SPREE_USER_CLASS=Spree::User
SPREE_ADMIN_EMAIL=admin@golfnvibes.com
SPREE_ADMIN_PASSWORD=secure_password_here

# Email Configuration (using SendGrid, Mailgun, or Azure Communication Services)
# SMTP_SERVER=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USERNAME=apikey
# SMTP_PASSWORD=your_sendgrid_api_key
# SMTP_DOMAIN=your-domain.com

# Asset and File Storage
# For Azure Blob Storage (optional)
# AZURE_STORAGE_ACCOUNT_NAME=your_storage_account
# AZURE_STORAGE_ACCESS_KEY=your_access_key
# AZURE_STORAGE_CONTAINER_NAME=spree-assets

# Security Settings
FORCE_SSL=true
SECURE_HEADERS=true

# Performance and Caching
RAILS_SERVE_STATIC_FILES=true
RAILS_LOG_LEVEL=info

# Spree Sample Data (set to true for first deployment only)
LOAD_SAMPLE_DATA=false

# Payment Gateway Configuration
# Stripe (recommended for production)
# STRIPE_PUBLISHABLE_KEY=pk_live_...
# STRIPE_SECRET_KEY=sk_live_...

# PayPal (if using PayPal checkout)
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret
# PAYPAL_ENVIRONMENT=live

# Analytics and Monitoring
# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX-X

# Sentry Error Tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Feature Flags
ENABLE_REDIS_CACHING=false
ENABLE_BACKGROUND_JOBS=false
ENABLE_SSL_REDIRECT=true

# Golf N Vibes Specific Configuration
STORE_NAME=Golf N Vibes
STORE_TAGLINE=Premium Golf Equipment & Apparel
STORE_EMAIL=info@golfnvibes.com
STORE_PHONE=+1-555-GOLF-CLUB

# Social Media Links (optional)
# FACEBOOK_URL=https://facebook.com/golfnvibes
# TWITTER_URL=https://twitter.com/golfnvibes
# INSTAGRAM_URL=https://instagram.com/golfnvibes
